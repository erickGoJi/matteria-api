@model  admin.matteria.Models.LoginRequest
@{
    Layout = null;
}


<style>
    .alertas {
        display: inline;
        padding: .2em .6em .3em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        color: #fff;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .25em;
    }
    .card {
        margin-top: 70px;
        max-width: 30%;
        border: 1px solid #d7d7d7;
        border-radius: 5px;
        padding: 10px;
    }

</style>
<!DOCTYPE html>

<html>
<head>
    <link href="~/css/estilosLogin.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Index</title>
</head>
<body>
    <center>
        
        
        <form asp-controller="User" asp-action="Login" method="post">
            

            <div class="card">
                <div class="row">
                    <div class="col-md-12">
                        <section>
                            <div>
                                <img src="~/images/matteria_logo.png" style="width:180px;" />
                            </div>
                            <h2 style="color:#000000">Iniciar sesión</h2>
                            <div asp-validation-summary="All" class="text-danger" style="font:bold;"></div>
                            <hr />
                            <div class="form-group text-left">
                                <label style="color:#000000">Usuario:</label>
                                <input asp-for="UsuarioEmail" class="form-control" />
                                <span asp-validation-for="UsuarioEmail" class="text-danger" />
                            </div>
                            <div class="form-group text-left">
                                <label style="color:#000000">Contraseña:</label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Iniciar sesión</button>
                            </div>

                        </section>
                    </div>
                </div>
            </div>
        </form>
    </center>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>