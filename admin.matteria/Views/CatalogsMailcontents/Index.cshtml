@model IEnumerable<biz.matteria.Entities.CatalogsMailcontent>

@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a class="btn-sm btn-success" asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitleEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NamePt)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitleEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameEn)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NamePt)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id, name = item.Name }, new { @class = "btn-sm btn-success" }) 
                
                
            </td>
            <td>
                @Html.ActionLink("Detalle", "Details", new { id = item.Id, name = item.Name }, new { @class = "btn-sm btn-success" }) 
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id, name = item.Name }, new { @class = "btn-sm btn-success" })
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
