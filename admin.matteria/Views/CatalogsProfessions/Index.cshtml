@model IEnumerable<biz.matteria.Entities.CatalogsProfession>

@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    

</head>
<body>
<p>
    <a class="btn-sm btn-success" asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NamePt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedById)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedById)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameEn)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id, name = item.Name, nameEn = item.NameEn, namePt = item.NamePt }, new { @class = "btn-sm btn-success" }) 
                                
            </td>
            <td>
                @Html.ActionLink("Detalle", "Details", new { id = item.Id, name = item.Name, nameEn = item.NameEn, namePt = item.NamePt }, new { @class = "btn-sm btn-success" })
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id, name = item.Name, nameEn = item.NameEn, namePt = item.NamePt }, new { @class = "btn-sm btn-success" })
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
